<%- include("partials/header.ejs") %>

<h1>Home</h1>
<%= paragraph %>

<% if(locals.posts) {%>
    <% posts.forEach(element => {%>
    <h2><%= element.title %></h2>
    <%if(element.post.length > 100){ %>
        <p><%= element.post.substring(0,100) %>  <a href="/post/<%= element.title %>">Read more</a></p>
    <% }else{ %>
        <p><%= element.post %></p>
    <% } %>
    <% }); %>
<% } %>


